<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.will.loans"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include layout="@layout/common_title"></include>
    <com.will.loans.weight.ProgressWheel
            android:layout_marginTop="20dp"
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/have_wheel"
            app:text="持有资产"
            app:textColor="@color/bottom_text_gray"
            ProgressWheel:barColor="@color/red"
            ProgressWheel:barWidth="8dp"
            ProgressWheel:rimWidth="8dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text="click"
            ProgressWheel:textColor="@color/transparent"
            ProgressWheel:textSize="24sp"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    <com.will.loans.weight.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/amount_wheel"
            app:text="账户余额"
            app:textColor="@color/bottom_text_gray"
            ProgressWheel:barColor="@color/red"
            ProgressWheel:barWidth="8dp"
            ProgressWheel:rimWidth="8dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text="444"
            ProgressWheel:textColor="@color/transparent"
            ProgressWheel:textSize="24sp"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
</LinearLayout>