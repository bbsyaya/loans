<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >
    <LinearLayout
        style="@style/Width_0_height_wrap"
        android:layout_weight="8"
        android:orientation="vertical" >
        <LinearLayout
            style="@style/Width_match_height_wrap"
            android:layout_marginTop="5dp" >
            <TextView
                android:id="@+id/loans_title"
                style="@style/Width_0_height_wrap"
                android:layout_weight="1"
                android:text="车金融b234号"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/loans_title"
                style="@style/Width_0_height_wrap"
                android:layout_weight="1"
                android:text="已申购 0 人"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <LinearLayout
            style="@style/Width_match_height_wrap"
            android:layout_marginTop="12dp" >
            <LinearLayout
                style="@style/Width_0_height_wrap"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/loans_plan"
                    style="@style/Width_wrap_height_wrap"
                    android:text="预期年化" />
                <TextView
                    android:id="@+id/loans_persent"
                    style="@style/Width_wrap_height_wrap"
                    android:text="91%" />
            </LinearLayout>
            <LinearLayout
                style="@style/Width_0_height_wrap"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/loans_number"
                    style="@style/Width_wrap_height_wrap"
                    android:text="限12个月" />
                <TextView
                    android:id="@+id/loans_low"
                    style="@style/Width_wrap_height_wrap"
                    android:text="50元起购" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/Width_wrap_height_wrap"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/loans_low"
            style="@style/Width_wrap_height_wrap"
            android:layout_alignParentRight="true"
            android:paddingLeft="3dp"
            android:paddingTop="12dp"
            android:rotation="45"
            android:text="新手标"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/loans_number"
            style="@style/Width_wrap_height_wrap"
            android:layout_marginTop="12dp"
            android:text="限12个月" />
        <TextView
            android:id="@+id/loans_low"
            style="@style/Width_wrap_height_wrap"
            android:text="50元起购" />
    </LinearLayout>
</LinearLayout>