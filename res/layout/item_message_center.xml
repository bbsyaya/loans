<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="8dp" >
    <ImageView
        android:id="@+id/cpay_help_list_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cpay_help_list_jt" />
    <TextView
        android:id="@+id/item_message_title"
        android:layout_width="wrap_content"
        android:text="积分天天送，收益日益增长"
        android:paddingLeft="20dp"
    	android:paddingRight="5dp"
    	android:ellipsize="end"
    	android:maxLength="8"
    	android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
         />
    <TextView
        android:id="@+id/item_message_desc"
        android:layout_width="wrap_content"
        android:text="准经的用户您好，您的账号已注册成功。购买指定产品，就可额外获得超值盈利积分套餐"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="25dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/title_text"
        android:layout_below="@id/item_message_title"
        android:lines="2"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014_09-15 09:24"
        android:textColor="@color/title_text"
        android:layout_alignParentRight="true"
        android:paddingRight="25dp"
        android:layout_above="@+id/item_message_desc"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>