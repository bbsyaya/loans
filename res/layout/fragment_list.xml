<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/common_title" />
    <RadioGroup
        android:id="@+id/radio"
        style="@style/Width_match_height_wrap"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/btn_radio_left"
            style="@style/ProductListRbtn"
            android:text="@string/product_loans" />
        <RadioButton
            android:id="@+id/btn_radio_center"
            style="@style/ProductListRbtn"
            android:text="@string/product_coins" />
        <RadioButton
            android:id="@+id/btn_radio_right"
            style="@style/ProductListRbtn"
            android:text="@string/product_others" />
    </RadioGroup>
    <LinearLayout
        style="@style/Width_match_height_wrap"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_blue_glide"
            android:layout_width="0dp"
            android:layout_height="@dimen/glide_bar_height"
            android:layout_weight="1"
            android:background="@color/tab_bar_glide_background" />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/glide_bar_height"
            android:layout_weight="2" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>
</LinearLayout>