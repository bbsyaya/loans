<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <RelativeLayout
        style="@style/RegisterEt"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/transparent" >

        <EditText
            android:id="@+id/pwET"
            style="@style/Width_match_height_wrap"
            android:background="@drawable/register_number_bg"
            android:focusable="true"
            android:hint="请输入密码"
            android:inputType="phone" />

        <EditText
            android:id="@+id/epwET"
            style="@style/Width_match_height_wrap"
            android:layout_below="@+id/pwET"
            android:layout_marginTop="5dp"
            android:background="@drawable/register_number_bg"
            android:focusable="true"
            android:hint="请再次输入密码"
            android:inputType="phone" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
       android:textSize="12sp"
        android:text="请两次输入相同密码，密码长度大于6位" />

    <Button
        android:id="@+id/btn_next"
        style="@style/Width_match_height_wrap"
        android:layout_margin="10dp"
        android:background="@drawable/speak_hint_dialog_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@android:color/white" />

</LinearLayout>