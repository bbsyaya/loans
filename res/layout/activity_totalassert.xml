<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <include layout="@layout/common_title" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >
        <com.will.loans.weight.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            ProgressWheel:barWidth="4dp"
            ProgressWheel:rimColor="@color/red"
            ProgressWheel:rimWidth="4dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text="持有资产"
            ProgressWheel:textColor="@color/gray_dark" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingTop="40dp" >
            <TextView
                android:id="@+id/percentTVone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textColor="@color/gray_dark"
                android:textSize="36sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:text="%"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
        <com.will.loans.weight.ProgressWheel
            xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar_two"
            android:layout_width="150dp"
            android:layout_height="150dp"
            ProgressWheel:barWidth="4dp"
            ProgressWheel:rimColor="@color/red"
            ProgressWheel:rimWidth="4dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text="账户余额"
            ProgressWheel:textColor="@color/gray_dark" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/percentTVtwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:text="17"
                android:textColor="@color/gray_dark"
                android:textSize="36sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:text="%"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>